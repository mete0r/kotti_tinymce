<div xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     tal:omit-tag="">
<textarea id="${field.oid}" name="${field.name}" class="form-control" tal:content="structure cstruct" />
<div id="${field.oid}-editor" class="tinymce-editor form-control hidden"></div>
<script language="javascript" type="text/javascript">
(function($){
  deform.addCallback(
    '${field.oid}',
    function(oid) {
      var jqoid = $('#' + oid);
      var jqoid_editor = $('#' + oid + '-editor');

      function loadContent() {
        var content = jqoid.val();
        jqoid_editor.html(content);
      }

      function saveContent() {
        var content = jqoid_editor.html()
        jqoid.val(content);
      }

      loadContent();

      jqoid.addClass('hidden');
      jqoid_editor.css('height', 'auto');
      jqoid_editor.removeClass('hidden');

      function initEditor(setfocus) {
        console.log('editor init');
        tinyMCE.init({
          setup: function(editor) {
            editor.on('focus', function(e) {
              console.log('onfocus');
            });
            editor.on('blur', function(e) {
              console.log('onblur');
            });
          },
          mode : 'exact',
          plugins : "codemirror,kottiimage,link,advlist,textcolor,contextmenu,table",
          codemirror: {
            // codemirror **plugin** config options
            indentOnInit: false,
            config: {
              // codemirror config options
            }
          },
          selector: '#' + oid + '-editor',
          auto_focus: setfocus ? oid + '-editor' : undefined,
          strict_loading_mode : true,
          inline: true,
          skin : '${field.widget.skin | None}',
          theme : '${"modern" if field.widget.theme in [None, "advanced", "simple"] else field.widget.theme | 'modern'}',
          theme_advanced_resizing : true,
          theme_advanced_toolbar_align : 'left',
          theme_advanced_toolbar_location : 'top',
          theme_advanced_buttons3_add : "tablecontrols",
          table_styles : "Header 1=header1;Header 2=header2;Header 3=header3",
          table_cell_styles : "Header 1=header1;Header 2=header2;Header 3=header3;Table Cell=tableCel1",
          table_row_styles : "Header 1=header1;Header 2=header2;Header 3=header3;Table Row=tableRow1",
          table_cell_limit : 100,
          table_row_limit : 5,
          table_col_limit : 5,
          relative_urls: false,
          image_list : 'external_image_list',
          image_advtab: true,
          link_list : 'external_link_list',
          file_browser_callback : window.kottibrowser,
          language: '<tal:block i18n:domain="kotti_tinymce" i18n:translate="language-code">en</tal:block>'
        });
      }
      $('#deform').submit(function() {
        saveContent();
      });
      if(!${str(bool(field.widget.delayed_load)).lower()}){
        initEditor(false);
      } else {
        jqoid_editor.click(function() {
          jqoid_editor.unbind('click');
          initEditor(true);
        });
      }
    }
  );
  $().bind('form.pre.serialize', function(event, $form, options) {
    tinyMCE.triggerSave();
  });
})(jQuery);
</script>
</div>
